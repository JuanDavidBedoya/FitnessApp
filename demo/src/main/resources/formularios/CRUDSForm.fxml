<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="900.0" style="-fx-background-color: #ECF0F1; -fx-border-color: #34495E; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.formularios.CRUDSForm">
    <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <HBox alignment="TOP_LEFT">
            <Button onAction="#handleVolverAlSelector" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold;" text="← Volver al Selector" />
        </HBox>

        <HBox alignment="CENTER">
            <Label text="Bienvenid@ a Fitness App" textFill="#2c3e50">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
        </HBox>

        <HBox alignment="CENTER">
            <Label text="Seleccione el módulo al que desea acceder:">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
        </HBox>
        
        <VBox alignment="CENTER" spacing="10.0">
            <Button mnemonicParsing="false" onAction="#handleProgreso" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #007ACC; -fx-text-fill: white; -fx-font-weight: bold;" text="Progreso (Peso y Calorías)" />
            <Button mnemonicParsing="false" onAction="#handleObjetivo" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold;" text="Objetivos Deportivos" />
            <Button mnemonicParsing="false" onAction="#handleRecordatorio" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #F39C12; -fx-text-fill: white; -fx-font-weight: bold;" text="Recordatorios" />
            <Button mnemonicParsing="false" onAction="#handleRutinaFavorita" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #FFC300; -fx-text-fill: white; -fx-font-weight: bold;" text="Rutinas Favoritas" />
            <Button mnemonicParsing="false" onAction="#handleCerrarSesion" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold;" text="Cerrar Sesión" />
        </VBox>
        
        <AnchorPane VBox.vgrow="ALWAYS" />

    </VBox>
</AnchorPane>