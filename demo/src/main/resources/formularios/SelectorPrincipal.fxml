<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="450.0" spacing="20.0" style="-fx-background-color: #ECF0F1; -fx-border-color: #34495E; -fx-border-width: 2;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.formularios.SelectorPrincipal">
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
   <children>
      <Label text="Bienvenid@" textFill="#2c3e50">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label text="Selecciona el módulo al que deseas acceder:" textFill="#7f8c8d" />
      <Button onAction="#handleIrACruds" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 10, 0, 0, 0);" text="Administrar Datos (CRUDs)" />
      <Button onAction="#handleIrAReportes" prefHeight="50.0" prefWidth="300.0" style="-fx-background-color: #2ECC71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 10, 0, 0, 0);" text="Generar Reportes" />
      
      <Button onAction="#handleCerrarSesion" prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" text="Cerrar Sesión" VBox.vgrow="NEVER" />
   </children>
</VBox>